<%= link_to task_complete_path(task), method: :patch do %>
    <i class="las la-check-circle"></i>
<% end %>
<%= link_to edit_task_path(task) do %>
    <i class="las la-pen"></i>
<% end %>
<%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.name}?" } do %>
    <i class="las la-trash-alt la-1x"></i>
<% end %>